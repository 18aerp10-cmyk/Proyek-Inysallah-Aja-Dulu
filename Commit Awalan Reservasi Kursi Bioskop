program ReservasiKursi;
uses crt;

type
    DataKursi = record
        Isi: boolean;
    end;
var
    Kursi: array[1..20] of DataKursi;
    Pilihan, NomorKursi: integer;

procedure Inisialisasi;
var
    i: integer;
begin
    for i := 1 to 20 do
        Kursi[i].Isi := false;
end;

procedure LihatKursi;
var
    i: integer;
begin
    clrscr;
    writeln('Status Kursi (O = Kosong, X = Terisi)');
    writeln;
    for i := 1 to 20 do
    begin
        if Kursi[i].Isi then
        write('[X] ')
        else
        write('[O] ');
        if i mod 5 = 0 then
        writeln;
    end;
    writeln;
    writeln('Silahkan tekan enter untuk kembali ke menu yaaaa');
    readln;
    clrscr;
end;
