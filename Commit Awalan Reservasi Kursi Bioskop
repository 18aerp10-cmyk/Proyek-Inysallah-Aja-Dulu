    readln;
end.

program ReservasiKursi;
uses crt;
type
    DataKursi = record
        Isi: boolean;
    end;
var
    Kursi: array[1..20] of DataKursi;

var
    Pilihan: integer;

begin
    clrscr;
    Inisialisasi;

    writeln('Menu Reservasi Kursi');
    writeln('1. Lihat Kursi');
    writeln('2. Pesan Kursi');
    writeln('3. Batalkan Kursi');
    writeln('4. Keluar');
    write('Pilih menu: ');
    readln(Pilihan);
end.
